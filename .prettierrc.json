{
   "arrowParens": "avoid",
   "bracketSameLine": true,
   "bracketSpacing": true,
   "embeddedLanguageFormatting": "auto",
   "htmlWhitespaceSensitivity": "ignore",
   "insertPragma": false,
   "jsxSingleQuote": true,
   "printWidth": 80,
   "quoteProps": "as-needed",
   "single-attribute-per-line": true,
   "requirePragma": false,
   "semi": true,
   "singleQuote": true,
   "tabWidth": 3,
   "trailingComma": "es5",
   "useTabs": true,
   "overrides": [
      {
         "files": ["*.scss", "*.sass", "*.css"],
         "options": {
            "tabWidth": 2
         }
      }
   ]
}
